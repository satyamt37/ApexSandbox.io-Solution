public String aOrAn(String word) {
    if( word.startsWith('a') ||
        word.startsWith('e') ||
        word.startsWith('i') ||
        word.startsWith('o') ||
        word.startsWith('u')) {
        word = 'an ' + word;
        return word;
    } else {
        word = 'a ' + word;
        return word;
    }
}
