public Boolean isPrime(Integer num) {
    Boolean isPrime = false;

    if (num <= 1) {
        isPrime = false;
    } else if (num == 2) {
        isPrime = true;
    } else {
        for (Integer i = 2; i <= Math.sqrt(num); i++) {
            if (Math.mod(num, i) == 0) {
                isPrime = false;
                break;
            }
        }
    }

    return isPrime;
}
